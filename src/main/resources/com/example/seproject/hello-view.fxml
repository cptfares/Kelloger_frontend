<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane prefHeight="800.0" prefWidth="1000.0" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1">
    <left>
        <VBox alignment="TOP_LEFT" spacing="10" style="-fx-background-color: #2c3e50; -fx-padding: 20px;">
            <Button text="Dashboard" style="-fx-background-color: transparent; -fx-text-fill: white; -fx-font-size: 16px; -fx-font-weight: bold; -fx-border-width: 0;" />
            <Button text="Availability" style="-fx-background-color: transparent; -fx-text-fill: white; -fx-font-size: 16px; -fx-font-weight: bold; -fx-border-width: 0;" />
            <Button text="Account" style="-fx-background-color: transparent; -fx-text-fill: white; -fx-font-size: 16px; -fx-font-weight: bold; -fx-border-width: 0;" />
            <Button text="Log Out" style="-fx-background-color: transparent; -fx-text-fill: white; -fx-font-size: 16px; -fx-font-weight: bold; -fx-border-width: 0;" />
        </VBox>
    </left>
    <center>
        <VBox alignment="CENTER" spacing="20" style="-fx-padding: 20px;">
            <Label text="Space Information" style="-fx-font-size: 20px; -fx-font-weight: bold; -fx-text-fill: #2c3e50;" />

            <HBox spacing="20" alignment="CENTER">
                <VBox spacing="10">
                    <Label text="Space Name:" />
                    <Label text="ID:" />
                    <Label text="Maximum Capacity:" />
                    <Label text="Current People Inside:" />
                    <Label text="Current People Inside (Past Hour):" />
                </VBox>

                <VBox spacing="10">
                    <Label fx:id="spaceNameLabel" />
                    <Label fx:id="idLabel" />
                    <Label fx:id="maxCapacityLabel" />
                    <Label fx:id="currentInsideLabel" />
                    <Label fx:id="currentInsidePastHourLabel" />
                </VBox>
            </HBox>
        </VBox>
    </center>
</BorderPane>
